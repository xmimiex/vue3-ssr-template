{
  "name": "vue3-ssr-template",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=16.13.1"
  },
  "scripts": {
    "prepare": "yarn husky install",
    "analyz": "cross-env NODE_ENV=production ANALYZ_PORT=true yarn run build:app-client",
    "build": "rm -rf ./dist && npm-run-all build:app build:server",
    "build:app": "rm -rf ./dist/app && yarn build:app-client && yarn build:app-server",
    "build:app-client": "vite build --ssrManifest --outDir dist/app/client",
    "build:app-server": "SSR=1 vite build --ssr src/app/entry-server.ts --outDir dist/app/server",
    "build:server": "rm -rf ./dist/server && SSR=1 vite build --ssr src/server/index.ts --outDir dist/server",
    "postbuild": "node ./scripts/post-build.js",
    "serve:dev": "cross-env ts-node -r tsconfig-paths/register src/server/index-dev-server",
    "serve:dev-debug": "cross-env VITE=1 DEBUG=vite:* ts-node  -r tsconfig-paths/register src/server/index-dev-server",
    "serve:prod": "cross-env NODE_ENV=production NODE_OPTIONS=\"--max-old-space-size=1024\" node dist/server --host 0.0.0.0",
    "lint": "eslint --ext .ts,.js,.vue . && yarn stylelint 'src/**/*.{vue,css,scss}'",
    "lint:fix": "eslint --ext .ts,.js,.vue . --fix && yarn stylelint 'src/**/*.{vue,css,scss}' --fix",
    "test": "jest -i",
    "test:update": "jest -i --updateSnapshot",
    "build:storybook": "build-storybook",
    "serve:storybook": "start-storybook -p 6006",
    "build:docker": "docker build -t vue3-ssr-template .",
    "serve:docker": "docker run -e 'VUE_APP_CONFIG_FILE=/config/production.yml' -v $(pwd)/config:/config -p 8080:8080 -d vue3-ssr-template",
    "serve:docs": "vuepress dev docs",
    "build:docs": "vuepress build docs"
  },
  "dependencies": {
    "@vueuse/head": "^0.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^11.0.0",
    "geoip-country": "^4.0.102",
    "js-yaml": "^4.1.0",
    "koa": "^2.13.4",
    "koa-compress": "^5.1.0",
    "koa-helmet": "^6.1.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^10.1.1",
    "koa-static": "^5.0.0",
    "pinia": "^2.0.9",
    "regenerator-runtime": "^0.13.9",
    "request-ip": "^2.1.3",
    "vue": "^3.2.26",
    "vue-i18n": "^9.2.0-beta.25",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@storybook/addon-actions": "^6.4.12",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/builder-webpack5": "^6.4.9",
    "@storybook/core": "^6.4.9",
    "@storybook/manager-webpack5": "^6.4.9",
    "@storybook/vue3": "^6.4.9",
    "@swc/core": "^1.2.129",
    "@swc/jest": "^0.2.17",
    "@types/jest": "^27.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/koa": "^2.13.4",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-json": "^2.0.20",
    "@types/koa-mount": "^4.0.1",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vitest/ui": "^0.1.12",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-0",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "css-loader": "^6.5.1",
    "eslint": "^8.6.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-vue": "^8.2.0",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.6",
    "jest-environment-jsdom": "^27.4.6",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^2.0.0",
    "koa-connect": "^2.1.0",
    "lint-staged": "^12.1.7",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.3.0",
    "stylelint": "^14.2.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "~4.5.4",
    "vite": "^2.7.10",
    "vuepress": "^2.0.0-beta.33"
  }
}
